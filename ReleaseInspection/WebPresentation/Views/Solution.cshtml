@using NewVoiceMedia.Tools.ReleaseInspection
@using NewVoiceMedia.Tools.ReleaseInspection.Model
@using NewVoiceMedia.Tools.ReleaseInspection.WebPresentation
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<NewVoiceMedia.Tools.ReleaseInspection.Model.Solution>

<!DOCTYPE html>
<html>
    <head>
        <title>Commit History for the @Model.Name Solution</title>
        <link rel="stylesheet" type="text/css" href="/Content/bootstrap-3.0.0.min.css" media="screen" />
        <script type="text/javascript" src="/Content/jquery-2.1.0.min.js"></script>
        <script type="text/javascript" src="/Content/jquery.tablesorter-2.0.min.js"></script>
        <script src="/Content/bootstrap-3.2.0.min.js" type="text/javascript"></script>
        <script>
$(document).ready(function () {
    $("#projectsTable").tablesorter();
    }
);
        </script>
    </head>
    <body>
        <div class="container">
            <div>
                <h1>Commit History for the @Model.Name Solution</h1>
            </div>
            <div>
                <table id="projectsTable" class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Project Name and Relative Uri</th>
                            <th>No. of check-ins in last @Project.HistoryDays days</th>
                        </tr>
                    </thead>
                    @foreach (var project in @Model.Projects)
                    {
                        <tr>
                            <td>@project</td>
                            <td>@project.CommitsOverTime</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </body>
</html>